 <style>
   body {
    background: url(https://unsplash.it/1024/768?random) no-repeat;
    background-size: 100%; /* Современные браузеры */
   }
  </style>

<div class="authorizationform">
  <h2>Вход</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      <%= f.input :password, required: false, placeholder: "Пароль", label: false %>
      <%= f.input :remember_me, label: "Запомнить меня", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Войти" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
